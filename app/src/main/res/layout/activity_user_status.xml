<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.authentication.UserStatusActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:tint="@color/blueColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/back"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/blueColor"
            app:layout_constraintBottom_toBottomOf="@+id/ivBackArrow"
            app:layout_constraintStart_toEndOf="@id/ivBackArrow"
            app:layout_constraintTop_toTopOf="@id/ivBackArrow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/join_state_essentials"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toStartOf="@+id/ivBackArrow"
            app:layout_constraintTop_toBottomOf="@id/ivBackArrow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelectStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_selection"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/grayColor"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="@+id/lbStatus"
            app:layout_constraintTop_toBottomOf="@+id/lbStatus" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvStudentStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:focusable="true"
            android:clickable="true"
            app:rippleColor="@color/lighBlueColor"
            app:cardCornerRadius="@dimen/_30sdp"
            app:strokeColor="@color/lightGrayColor"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="@+id/tvSelectStatus"
            app:layout_constraintTop_toBottomOf="@id/tvSelectStatus"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivStudent"
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:src="@drawable/ic_school"
                    android:background="@drawable/status_image_bg"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStudentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_am_a_student"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/ivStudent"
                    app:layout_constraintTop_toBottomOf="@+id/ivStudent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSelectStudentInstruction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:text="@string/student_status_instruction"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/grayColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvStudentStatus"
                    app:layout_constraintStart_toStartOf="@+id/tvStudentStatus" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTickStudent"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:tint="@color/blueColor"
                    android:src="@drawable/ic_check_circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivStudent"
                    android:visibility="invisible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvNewResidentStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_30sdp"
            app:layout_constraintEnd_toEndOf="@+id/cvStudentStatus"
            app:layout_constraintStart_toStartOf="@+id/cvStudentStatus"
            app:layout_constraintTop_toBottomOf="@id/cvStudentStatus"
            app:rippleColor="@color/lighBlueColor"
            app:strokeColor="@color/lightGrayColor"
            app:strokeWidth="@dimen/_2sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivResident"
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/status_image_bg"
                    android:src="@drawable/ic_location_city"
                    android:tint="@color/grayColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvResidentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/i_am_a_new_resident"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ivResident"
                    app:layout_constraintTop_toBottomOf="@+id/ivResident" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSelectResidentInstruction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="@string/resident_selection_instruction"
                    android:textColor="@color/grayColor"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvResidentStatus"
                    app:layout_constraintTop_toBottomOf="@+id/tvResidentStatus" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTickResident"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/blueColor"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivResident" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvStatusInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#EAF4FF"
            app:layout_constraintStart_toStartOf="@id/cvNewResidentStatus"
            app:layout_constraintEnd_toEndOf="@id/cvNewResidentStatus"
            app:layout_constraintTop_toBottomOf="@id/cvNewResidentStatus">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivStatusInfo"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_error"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStatusInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/status_info"
                    android:textColor="@color/grayColor"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivStatusInfo"
                    app:layout_constraintTop_toTopOf="@id/ivStatusInfo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clNextStep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cvStatusInfo"
            app:layout_constraintStart_toStartOf="@+id/cvStatusInfo"
            app:layout_constraintTop_toBottomOf="@+id/cvStatusInfo">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnNextStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/next_step"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toStartOf="@+id/ivArrowForward"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivArrowForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/ic_arrow_forward"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btnNextStep"
                app:layout_constraintTop_toTopOf="@id/btnNextStep"
                app:layout_constraintStart_toEndOf="@+id/btnNextStep"
                app:layout_constraintHorizontal_chainStyle="packed" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>